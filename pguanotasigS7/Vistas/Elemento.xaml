<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="pguanotasigS7.Vistas.Elemento">
    <ContentPage.Content>
        <StackLayout Spacing="10" Padding="10">
            <Label x:Name="mensaje"/>
            <Label Text="Nombre: "/>
            <Entry x:Name="txtNombre" Placeholder="Nombre"/>
            <Label Text="Usuario: " />
            <Entry x:Name="txtUsuario" Placeholder="Usuario"/>
            <Label Text="Contraseña: " />
            <Entry x:Name="txtContrasena" Placeholder="Contrasena"/>
            <Button x:Name="btnActualizar" Text="Actualizar" Clicked="btnActualizar_Clicked" BackgroundColor="LawnGreen"/>
            <Button x:Name="btnEliminar" Text="Eliminar" Clicked="btnEliminar_Clicked" BackgroundColor="Red"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>